{
  "extends": ["eslint:recommended", "standard", "airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "react"
  ],
  "rules": {
    "no-console": [
      2,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "no-trailing-spaces": 2,
    "no-whitespace-before-property": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": 2,
    "curly": 2,
    "object-curly-spacing": [2, "always"],
    "eol-last": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "handle-callback-err": 2,
    "no-underscore-dangle": 0,
    "global-require": 0,
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-curly-spacing": [2, "never"],
    "react/prop-types": 0,
    "import/no-extraneous-dependencies": 0,
    "import/first": 0,
    "import/newline-after-import": 0,
    "import/extensions": 0
  },
  "globals": {
    "DEVELOPMENT": true
  }
}