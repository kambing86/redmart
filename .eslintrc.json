{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "babel",
    "react"
  ],
  "rules": {
    "no-console": [
      2,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "no-trailing-spaces": 2,
    "no-whitespace-before-property": 2,
    "no-multi-spaces": 2,
    "no-multiple-empty-lines": 2,
    "curly": 2,
    "object-curly-spacing": [2, "always"],
    "eol-last": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-curly-spacing": [2, "never"]
  },
  "globals": {
    "Promise": true
  }
}